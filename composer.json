{
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "pantheon-systems/wordpress",
        "version": "5.1.1",
        "dist": {
          "url": "https://github.com/pantheon-systems/WordPress/archive/5.1.1.zip",
          "type": "zip"
        },
        "source": {
          "url": "git@github.com:pantheon-systems/WordPress.git",
          "type": "git",
          "reference": "5.1.1"
        },
        "type": "wordpress-core",
        "require": {
          "johnpbloch/wordpress-core-installer": ">=0.1"
        },
        "extra": {
          "wordpress-install-dir": "web/wp"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "5.8.0",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://connect.advancedcustomfields.com/index.php?p=pro&a=download"
        },
        "require": {
          "philippbaschke/acf-pro-installer": "^1.0",
          "composer/installers": "^1.0"
        }
      }
    }
  ],
  "require": {
    "php": ">=7.0",
    "wpackagist-plugin/pantheon-advanced-page-cache": "^0.3.0",
    "philippbaschke/acf-pro-installer": "^1.0",
    "advanced-custom-fields/advanced-custom-fields-pro": "^5.7",
    "wpackagist-plugin/woocommerce": "^3.6",
    "wpackagist-plugin/acf-to-rest-api": "^3.1",
    "wpackagist-plugin/woo-permalink-manager": "^2.1",
    "wpackagist-plugin/classic-editor": "^1.4",
    "wpackagist-plugin/wp-native-php-sessions": "^0.7.0",
    "anthonybudd/wp_route": "@dev",
    "eftec/bladeone": "^3.23",
    "upstatement/routes": "^0.5.0",
    "spatie/server-side-rendering": "^0.2.5",
    "pantheon-systems/wordpress": "^5.1.1"
  },
  "extra": {
    "installer-paths": {
      "web/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  },
  "scripts": {
    "remove-git-submodules": "find . -mindepth 2 -type d -name .git | xargs rm -rf",
    "post-install-cmd": [
      "@remove-git-submodules"
    ],
    "post-update-cmd": [
      "@remove-git-submodules"
    ]
  }
}
